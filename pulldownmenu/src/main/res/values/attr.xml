<resources>
    <declare-styleable name="DragContainer">
        <attr name="drag_view_align">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="drag_child_id" format="reference" />
        <attr name="content_view_id" format="reference" />
        <attr name="drag_view_align_margin" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="BalloonView">
        <attr name="size" format="dimension|reference" />
        <attr name="line_length" format="dimension|reference" />
        <attr name="line_width" format="dimension|reference" />
        <attr name="line_color" format="reference|color" />
    </declare-styleable>

</resources>